<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drw"
    tools:context=".profilePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5373ff"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:background="#aa00"
            android:hint="Enter your name:"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtName"
            android:background="#aa4455"
            android:hint="Enter your familyname:"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtFamily"
            android:background="#aa4466"
            android:hint="Enter your Phone number:"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPhone"
            android:background="#aa4477"
            android:hint="Enter your age:"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAge"
            android:background="#aa4499"
            android:hint="Enter your address:"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAddress"
            android:text="review"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="right"
        android:background="#ffbb88"
        android:layout_width="270dp"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/nissan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/F"
            android:textSize="27sp"
            android:text="First"
            android:background="#ddf"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/S"
            android:text="second"
            android:textSize="27sp"
            android:background="#ddf"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/T"
            android:text="Third"
            android:background="#ddf"
            android:textSize="27sp"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>